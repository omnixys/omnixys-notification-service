NODE_ENV=development
GRAPHQL_PLAYGROUND=true


# /services/notification/.env.example

# -------------------------------
# Datenbank
# -------------------------------

DATABASE_URL=postgresql://notification_user:notification_pass@localhost:5432/notificationdb?schema=public
SHADOW_DATABASE_URL=postgresql://notification_user:notification_pass@localhost:5432/notificationdb_shadow?schema=public

# -------------------------------
# JWT Einstellungen für QR-Tokens
# -------------------------------
JWT_ALG="HS256"                  # oder RS256
JWT_SECRET="dev-secret-change"   # nur für HS256
JWT_PRIVATE_KEY_PATH=""           # Pfad zur privaten PEM-Datei (bei RS256)
JWT_PUBLIC_KEY_PATH=""            # Pfad zur öffentlichen PEM-Datei (bei RS256)
JWT_ISSUER="checkpoint-notification"
JWT_AUDIENCE="checkpoint-scan"

# -------------------------------
# QR Token Rotation
# -------------------------------
DEFAULT_ROTATE_SECONDS=60

# -------------------------------
# Keycloak Integration
# -------------------------------
KEYCLOAK_JWKS_URL="http://localhost:8080/realms/checkpoint/protocol/openid-connect/certs"
REQUIRED_ROLES="admin,security"
DISABLE_AUTH=true   # Dev-Modus: Auth deaktivieren

# -------------------------------
# Service Port
# -------------------------------
PORT=3005
PORT_WS=3006
SERVICE=notification

# REDIS_URL=redis://:deinStarkesPasswort@redis:6379
REDIS_URL=redis://:deinStarkesPasswort@127.0.0.1:6379
